<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="com.fernandez.thinktactime.QuestionActivity">

    <ImageView
        android:id="@+id/bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/bgblackhole"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextClock
        android:id="@+id/textClock"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_marginTop="70dp"
        android:text="8:00"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/etDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Tuesday, June 20"
        android:textColor="#FFF"
        android:textAlignment="center"
        android:layout_alignTop="@+id/textClock"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/ivBrain"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/brain"
        android:layout_below="@+id/etDate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:layout_marginBottom="11dp"
        android:background="#7AC5CD"
        android:text="Submit"
        android:layout_alignBottom="@+id/ivBrain"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Alarm!"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_alignTop="@+id/ivBrain"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/etQuestion"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#EE6AA7"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="176 x 72"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="20dp"
        android:layout_below="@+id/tvAlarm"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/etAnswerBox"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="#EE6AA7"
        android:cursorVisible="true"
        android:ems="10"
        android:hint="________"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#000"
        android:textColorHint="#FFF"
        android:textSize="20dp"
        android:layout_above="@+id/btnSubmit"
        android:layout_alignLeft="@+id/etQuestion"
        android:layout_alignStart="@+id/etQuestion"
        android:layout_marginBottom="47dp" />


</RelativeLayout>
